//Exercício 1

#include <stdio.h>
#include <math.h>
int eh_primo(int N) {
    int i;
    for (i=2; i<=sqrt(N); i++) {
        if (N%i==0) {
           return 0;
        }
    }
    return 1;
}
int main () {
    int A;
    printf("Escreva um número qualquer: ");
    scanf("%d", &A);
    if (eh_primo(A)==1) {
        printf("%d é primo\n", A);
    }
    else {
        printf("%d não é primo\n", A);
    }
}

//Exercício 2

#include <stdio.h>
#include <math.h>
int todos_os_primos(int max) {
    int i;
    for (i=2; i<=sqrt(max); i++) {
        if (max%i==0) {
           return 0;
        }
    }
    return 1;
}
int main () {
    int A,i;
    printf("Escreva um número qualquer: ");
    scanf("%d", &A);
    printf("Os números primos entre 1 e %d são: ", A);
    for (i=2;i<A;i++) {
        if (todos_os_primos(i)==1) {
            printf("%d ", i);
        }
    }
    printf("\n");
    return 0;
}

