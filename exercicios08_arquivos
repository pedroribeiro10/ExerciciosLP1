//Exercício 1

#include <stdio.h>
#include <string.h>

int main () {
    char str[26];
    FILE* arquivo;
    int i;
    
    printf("Escreva uma string (max 25 caracteres): ");
    scanf("%25s", str);
    
    arquivo = fopen("saida.txt", "w");
    if (arquivo == NULL) {
        printf("Erro ao abrir o arquivo!\n");
        return 1;
    }
    for (i=0 ; i < strlen(str) ; i++) {
        fputc(str[i], arquivo);
    }
    
    fclose(arquivo);
    printf("Arquivo escrito com sucesso!\n");

    
    return 0;
}


//Exercício 2

#include <stdio.h>
#include <string.h>

int main () {
	FILE* arquivo;
	char texto[26];
	char c;
	int i=0;
	
	arquivo = fopen("saida.txt", "r");
	if (arquivo == NULL) {
		printf("Erro ao abrir o arquivo!\n");
		return 1;
	}
	
	while ((c = fgetc(arquivo)) != EOF && i<25) {
		texto[i] = c;
		i++;
	} 
	
	texto[i] = '\0';
	fclose(arquivo);
	
	printf("String lida do arquivo: %s\n", texto);
	
	return 0;
}

//Exercício 3

Ao escrever: Não deve ser escrito o final '\0' pois ele não faz parte do texto.
Ao ler: Deve adicionar o '\0' manualmente para indicar o fim da string.

//Exercício 4


#include <stdio.h>
#include <string.h>

int main () {
	char textos[10][26];
	int i,j;
	FILE* arquivo;
	char nome_arquivo[20];
	
	for (i=0; i<10; i++) {
		printf("Escreva a frase %d: ", i+1);
		scanf(" %25[^\n]", textos[i]);	
	}
	
	for (i=0; i<10; i++) {
		sprintf(nome_arquivo, "string%d.txt", i+1);
		
		arquivo = fopen(nome_arquivo, "w");
		
		if (arquivo == NULL) {
			printf("Erro ao criar o arquivo %s\n", nome_arquivo);
			return 1;
		}
		
		for (j=0; j < strlen(textos[i]); j++) {
			fputc(textos[i][j], arquivo);
		}
		
		fclose(arquivo);
		printf("Frase %d gravada em %s\n",i+1, nome_arquivo);
	}
	return 0;
}


