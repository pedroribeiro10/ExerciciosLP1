//Exercicio 2
#include <stdio.h>
int main() {
  int a; int b;
  printf("Escreva um valor: ");
  scanf("%d",&a);
  printf("Escreva outro valor: ");
  scanf("%d",&b);
  if (a>b) {
  printf("O maior valor é: %d\n", a);
  }
  else if (b>a) {
  printf("O maior valor é: %d\n", b);
  }
return 0;
}

//Exercicio 3
#include <stdio.h>
void main () {
  float a,b;
  printf("Escreva o valor do celular ($): ");
  scanf("%f", &a);
  b=a*3.17;
  if (a*3.17<=1000) {
  printf("Bom negócio: %0.2f\n", b);
  }
  else {
  printf("Mau negócio: %0.2f\n", b);;
  }
}

//Exercicio 4
#include <stdio.h>
void main(void) {
    float a, kph;
    printf("Qual sua velocidade em mph?: ");
    scanf("%f", &a);
    kph=a*1.6;
    if (kph>=80 && kph<=100) {
        printf("MANTENHA: %0.1f Km/h", kph);
    }
    else if (kph<80) {
        printf("ACELERE: %0.1f Km/h", kph);
    }
    else if (kph>100) {
        printf("DESACELERE: %0.1f Km/h", kph);
    }
}

