//Exercicio 2
#include <stdio.h>
int main() {
  int a; int b;
  printf("Escreva um valor: ");
  scanf("%d",&a);
  printf("Escreva outro valor: ");
  scanf("%d",&b);
  if (a>b) {
    printf("O maior valor é: %d\n", a);
  }
  else if (b>a) {
    printf("O maior valor é: %d\n", b);
  }
return 0;
}

//Exercicio 3
#include <stdio.h>
void main () {
  float a,b;
  printf("Escreva o valor do celular ($): ");
  scanf("%f", &a);
  b=a*3.17;
  if (a*3.17<=1000) {
    printf("Bom negócio: %0.2f\n", b);
  }
  else {
    printf("Mau negócio: %0.2f\n", b);;
  }
}

//Exercicio 4
#include <stdio.h>
void main(void) {
    float a, kph;
    printf("Qual sua velocidade em mph?: ");
    scanf("%f", &a);
    kph=a*1.6;
    if (kph>=80 && kph<=100) {
        printf("MANTENHA: %0.1f Km/h", kph);
    }
    else if (kph<80) {
        printf("ACELERE: %0.1f Km/h", kph);
    }
    else if (kph>100) {
        printf("DESACELERE: %0.1f Km/h", kph);
    }
}

//Exercicio 5
#include <stdio.h>
int main() {
    int a, somatorio;
    somatorio=0;
    printf("Digite um valor diferente de ZERO: ");
    scanf("%d",&a);
    while (a!=0) {
        somatorio+=a;
        printf("Digite outro valor diferente de ZERO: ");
        scanf("%d",&a);
    }
    printf("O somatório dos valores é: %d", somatorio);
return 0;
}

//Exercicio 6
#include <stdio.h>
int main () {
  int N,i,somatorio;
  somatorio=0;
  printf("Escreva um valor para N: ");
  scanf("%d", &N);
  for (i=1;i<=N;i++) {
      somatorio+=i*i;
  }
  printf("O somatório é: %d\n", somatorio);
return 0;
}

//Exercicio 7
#include<stdio.h>
int main () {
int codigoTime,melhorTime,piorTime,vitorias,derrotas,empates,pontos,maiorPonto,menorPonto,i;
  i=1;
  maiorPonto=0;
  menorPonto=999;
  while (i<=20){
    printf("Digite o código do time: ");
    scanf("%d", &codigoTime);
    printf("Digite quantas vitorias: ");
    scanf("%d", &vitorias);
    printf("Digite quantos empates: ");
    scanf("%d", &empates);
    printf("Digite quantas derrotas: ");
    scanf("%d", &derrotas);
    pontos = 3*(vitorias)+ empates;
    if(pontos>maiorPonto) {
      maiorPonto=pontos;
      melhorTime = codigoTime;
    }
    if(pontos<menorPonto) {
      menorPonto=pontos;
      piorTime=codigoTime;
    }
    i+=1;
  }
  printf("O Melhor time é: %d\n", melhorTime);
  printf("o Pior time é: %d\n", piorTime);
return 0;
}

//Exercicio 8 em C
#include <stdio.h>
int main () {
  int n1,n2,i;
  printf("Escreva o número n1: ");
  scanf("%d", &n1);
  printf("Escreva o número n2: ");
  scanf("%d", &n2);
  i=0;
  printf("Os números entre n1 e n2 são:\n");
  for (i=n1+1;i<n2;i++) {
    printf("%d\n", i);
  }
return 0;
}

//Exercicio 8 em Python
n1=int(input("Escreva o número n1:"))
n2=int(input("Escreva o número n2:"))
print("Os números entre n1 e n2 são:")
for i in range(n1+1,n2):
  print(i)
