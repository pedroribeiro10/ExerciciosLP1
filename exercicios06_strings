//Exercício 1

#include <stdio.h>
int tamanho(char* str) {
    int soma=0;
    while (*str != '\0') {
        soma+=1;
        str++;
    }
    return soma;
}
void main() {
    char texto[100];
    printf("Escreva uma palavra: ");
    scanf(" %[^\n]", &texto);
    printf("A quantidade de caracteres é: %d", tamanho(texto));
}

//Exercício 2

#include <stdio.h>
int tamanho(char* str) {
    int soma=0;
    while (*str != '\0') {
        soma+=1;
        str++;
    }
    return soma;
}
void concatena(char* d, char* o1, char* o2) {
    int i,j;
    int tam1=tamanho(o1);
    int tam2=tamanho(o2);
    for (i=0; i < tam1; i++) {
        d[i] = o1[i];
    }
    for (j=0; j < tam2; j++) {
        d[i+j] = o2[j];
    }
    d[i+j] = '\0';
}
void main() {
    char destino[200],origem1[100],origem2[100];
    printf("Escreva a frase 1: ");
    scanf(" %[^\n]", &origem1);
    printf("Escreva a frase 2: ");
    scanf(" %[^\n]", &origem2);
    concatena(destino,origem1,origem2);
    printf("A frase final é: %s\n", destino );
}

//Exercício 3

#include <stdio.h>
int palavras(char* str) {
    int soma=0;
    int i=0;
    while (str[i] != ' ' && str[i] != '\0') {
        i++;
        if (str[i] == ' ' || str[i] == '\0') {
            i++;
            soma++;
        }
    }
    return soma;
}
void main () {
    char frase[100];
    printf("Escreva uma frase: ");
    scanf(" %[^\n]", &frase);
    printf("A quantidade de palavras da frase é: %d\n", palavras(frase) );
}

//Exercício 4

#include <stdio.h>
int substring (char* s1, char* s2) {
    int i=0;
    int j=0;
    for (i;s1[i] != '\0';i++) {
        for (j;s2[j] != '\0';j++) {
            if (s1[i+j] != s2[j]) {
                break;
            }
        }
        if (s2[j] == '\0') {
            return 1;
        }
    }
return 0;
}

void main () {
    char st1[100]; char st2[100];
    printf("Escreva a frase ou palavra 1: ");
    scanf(" %[^\n]", st1);
    printf("Escreva a frase ou palavra 2: ");
    scanf(" %[^\n]", st2);
    if (substring(st1,st2)) {
        printf("A frase/palavra: '%s' é substring de: '%s'!\n ", st2, st1);
    } else {
         printf("A frase/palavra: '%s' NÃO é substring de: '%s'!\n ", st2, st1);
      }
}
